<% layout("/layouts/boilerplate.ejs") -%>
<div class="row">
  <div class="col-8">
  <h3 class="mt-3">Want to edit something</h3>
  <form method="post" action="/listing/<%=listing._id%>?_method=PUT"  novalidate class="needs-validation"  enctype="multipart/form-data" >
    <div class="mb-3">
      <lable for="title" class="form-label" >title</lable>
      <input name="listing[title]" value="<%=listing.title%>" type="text" class="form-control" required>
      <div class="valid-feedback">
        looks good
      </div>
    </div>
  
  <div class="mb-3">
    <lable for="description" class="form-label" >description</lable>
    <textarea name="listing[description]"  cols="100" rows="6" class="form-control" required><%=listing.description%></textarea>
    <div class="invalid-feedback">
      please enter decription 
   </div>
  </div>
 
  <div class="mb-3">
    <img src="<%=originalUrl%>" >
  </div>
  
  <div class="mb-3">
    <lable for="image" class="form-label" >upload new image</lable>
    <input type="file" name="listing[image]" value="<%=listing.image%>" class="form-control" >
  </div>

  <div class="row">
    <div class="mb-3 col-md-4">
      <lable for="price" class="form-label" >price</lable>
      <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control" required>
      <div class="invalid-feedback">
        please enter price
      </div>
    </div>
  
    <div class="mb-3 col-md-8">
      <lable for="country" class="form-label" >country</lable>
      <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control" required>
      <div class="invalid-feedback">
        please enter vaild country name 
      </div>
    </div>
  </div>

 
 <div class="mb-3">
  <lable for="location" class="form-label" >location</lable>
  <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control" required>
  <div class="invalid-feedback">
    please enter vaild location name 
  </div>
 </div>
  <br> <br>
  <button class="btn btn-dark mb-3 edit-btn">edit</button>
  </form>
</div>
</div>


